generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String           @id @default(uuid())
  email     String           @unique
  password  String
  name      String
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  deletedAt DateTime?
  blackList TokenBlacklist[]
}

model TokenBlacklist {
  id        String   @id @default(uuid())
  token     String
  userId    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  image     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  product   Product[]
  catalogue Catalogue[]
}

model Product {
  id          String    @id @default(cuid())
  category    Category  @relation(fields: [categoryId], references: [id])
  categoryId  String
  name        String
  description String    @db.Text
  images      String[]
  storeUrl    String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
}

model Gallery {
  id    String  @id @default(cuid())
  title String?
  image String
}

model Instagram {
  id    String  @id @default(cuid())
  title String?
  link  String  @db.Text
}

model Cordless {
  id          String @id @default(cuid())
  title       String
  description String @db.Text
  link        String
}

model Catalogue {
  id         String    @id @default(cuid())
  title      String?
  category   Category  @relation(fields: [categoryId], references: [id])
  categoryId String
  file       String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deletedAt  DateTime?
}
